    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Login - Secretary",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', jsonData.token);",
                  "    pm.test('Login successful', () => {",
                  "        pm.expect(jsonData.token).to.exist;",
                  "        pm.expect(jsonData.utilisateur.role).to.eql('SECRETAIRE_GENERALE');",
                  "    });",
                  "} else {",
                  "    pm.test('Login failed', () => {",
                  "        pm.expect(pm.response.code).to.be.oneOf([401, 400]);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom_utilisateur\": \"marie.secretaire\",\n  \"mot_passe\": \"MotPasse123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/connexion",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "connexion"]
            }
          }
        },
        {
          "name": "Login - President",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', jsonData.token);",
                  "    pm.test('Login successful', () => {",
                  "        pm.expect(jsonData.token).to.exist;",
                  "        pm.expect(jsonData.utilisateur.role).to.eql('PRESIDENT');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom_utilisateur\": \"jean.president\",\n  \"mot_passe\": \"MotPasse123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/connexion",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "connexion"]
            }
          }
        },
