# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/sgm_db"

# JWT Secret (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-here-change-this-in-production"

# Server Configuration
NODE_ENV="production"
PORT="3000"

# CORS Configuration (add your frontend domains)
FRONTEND_URL="https://your-frontend-domain.com,https://admin.your-domain.com"

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"  
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"  # Max requests per window

# Email Configuration (for notifications and password recovery)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@domain.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="your-email@domain.com"
EMAIL_FROM_NAME="SGM Association"

